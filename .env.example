# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/your-database-name

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# ClickFunnels Webhook Security
CLICKFUNNELS_WEBHOOK_SECRET=your-clickfunnels-webhook-secret-here

# Email Configuration (SMTP)
# Choose provider: gmail, outlook, hotmail, yahoo, custom
EMAIL_PROVIDER=gmail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
FROM_EMAIL=noreply@yourservice.com

# Chrome Extension URL (optional)
CHROME_EXTENSION_URL=https://your-chrome-extension-url.com

# Security Configuration
BCRYPT_ROUNDS=12